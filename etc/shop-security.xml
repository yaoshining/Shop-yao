<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:security="http://www.springframework.org/schema/security"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
   http://www.springframework.org/schema/security
   http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    <security:http pattern="/resources/**" security="none" />
	<security:http auto-config="true">
		<security:intercept-url pattern="/backstage/**" access="ROLE_ADMIN" />
		<security:form-login login-page="/access/login/backstage" username-parameter="userId" password-parameter="password" />
	</security:http>
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="yaoshining" password="yaoshining" authorities="ROLE_ADMIN"/>
				<security:user name="laixinglong" password="laixinglong" authorities="ROLE_ADMIN"/>
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>